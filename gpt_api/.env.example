# TELEGLAS GPT API Environment Configuration
# Copy this file to .env and update with your values

# API Server Settings
GPT_API_HOST=0.0.0.0
GPT_API_PORT=8000
GPT_API_DEBUG=false
GPT_API_ENVIRONMENT=production

# API Security Settings
# Comma-separated list of API keys (generate secure random strings)
GPT_API_API_KEYS=your-secret-api-key-1,your-secret-api-key-2
GPT_API_REQUIRE_AUTH=true

# Rate Limiting Settings
GPT_API_RATE_LIMIT_REQUESTS=100
GPT_API_RATE_LIMIT_WINDOW=60

# CORS Settings
GPT_API_CORS_ORIGINS=*
GPT_API_CORS_METHODS=GET,OPTIONS
GPT_API_CORS_HEADERS=*

# IP Allowlist Settings
# Comma-separated list of allowed IP addresses (optional)
GPT_API_IP_ALLOWLIST=
GPT_API_REQUIRE_IP_WHITELIST=false

# Request Settings
GPT_API_REQUEST_TIMEOUT=30
GPT_API_MAX_REQUEST_SIZE=1048576

# Logging Settings
GPT_API_LOG_LEVEL=INFO
GPT_API_LOG_FILE=logs/gpt_api.log

# Market Data Settings
GPT_API_DEFAULT_SYMBOL=BTC
GPT_API_MAX_SYMBOL_LENGTH=10

# Whale Settings
GPT_API_WHALE_DEFAULT_LIMIT=10
GPT_API_WHALE_MAX_LIMIT=100
GPT_API_WHALE_DEFAULT_THRESHOLD=100000

# Orderbook Settings
GPT_API_ORDERBOOK_DEFAULT_DEPTH=20
GPT_API_ORDERBOOK_MAX_DEPTH=100

# Health Check Settings
GPT_API_HEALTH_CHECK_INTERVAL=300
GPT_API_SERVICE_TIMEOUT=10

# Caching Settings
GPT_API_CACHE_TTL=15
GPT_API_ENABLE_CACHE=true

# Metadata Settings
GPT_API_VERSION=1.0.0
GPT_API_NAME=TELEGLAS GPT API
GPT_API_DESCRIPTION=Market data API for GPT Actions
