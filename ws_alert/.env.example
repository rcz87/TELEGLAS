# TELEGLAS Alert Bot Environment Configuration
# Copy this file to .env and fill with your values

# Alert Bot Token (UNIQUE from main bot!)
TELEGRAM_ALERT_TOKEN=your_alert_bot_token_here

# Alert Channel ID (where alerts will be sent)
TELEGRAM_ALERT_CHANNEL_ID=your_alert_channel_id_here

# Admin Chat ID (for error notifications and testing)
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here

# CoinGlass API Keys
COINGLASS_API_KEY=your_coinglass_api_key_here
COINGLASS_API_KEY_WS=your_coinglass_websocket_api_key_here

# CoinGlass API Base URL
COINGLASS_BASE_URL=https://open-api-v4.coinglass.com

# Alert Thresholds
WHALE_TRANSACTION_THRESHOLD_USD=500000
LIQUIDATION_THRESHOLD_USD=1000000
EXTREME_FUNDING_RATE=0.01

# Polling Intervals
WHALE_POLL_INTERVAL=30
LIQUIDATION_POLL_INTERVAL=60

# Rate Limiting
API_CALLS_PER_MINUTE=120
RATE_LIMIT_PER_AUTH_KEY=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ws_alert.log

# Database Configuration
DATABASE_URL=sqlite:///data/teleglas.db

# Feature Flags
ENABLE_WHALE_ALERTS=true
ENABLE_LIQUIDATION_ALERTS=false
ENABLE_FUNDING_ALERTS=false

# Alert Debounce Settings
WHALE_DEBOUNCE_MINUTES=5
LIQUIDATION_DEBOUNCE_MINUTES=2

# WebSocket Ping Configuration
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=60
WS_MIN_PING_INTERVAL=10
WS_MAX_PING_INTERVAL=120
WS_ADAPTIVE_PING_ENABLED=true

# Authentication & Privacy Configuration
API_KEY_ROTATION_ENABLED=false
API_KEY_ROTATION_INTERVAL_HOURS=24
REQUEST_SIGNING_ENABLED=true
PRIVATE_DATA_MASKING=true
AUTH_TOKEN_EXPIRY_HOURS=12

# Privacy Settings
PRIVATE_DATA_THRESHOLD_USD=1000000
MASK_SENSITIVE_FIELDS=true

# Security Keys (CHANGE IN PRODUCTION!)
ENCRYPTION_KEY=your_encryption_key_here
HMAC_SECRET_KEY=your_hmac_secret_key_here
